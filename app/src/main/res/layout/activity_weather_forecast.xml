<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harvey.androidlabs.WeatherForecast">

    <ImageView
        android:id="@+id/imgWeather"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@android:drawable/alert_dark_frame" />

    <TextView
        android:id="@+id/txtCurrentTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="#07f"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imgWeather" />

    <TextView
        android:id="@+id/txtMinTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="#07f"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtCurrentTemperature" />

    <TextView
        android:id="@+id/txtMaxTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="#07f"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtMinTemperature" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/txtMaxTemperature" />

</android.support.constraint.ConstraintLayout>
