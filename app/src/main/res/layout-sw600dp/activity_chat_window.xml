<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harvey.androidlabs.ChatWindow">

    <ListView
        android:id="@+id/chatView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/messageText"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/sendButton"
        android:ems="10" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/chatView"
        android:layout_alignParentBottom="true"
        android:text="@string/send" />

    <FrameLayout
        android:id="@+id/messageFragment_container"
        android:layout_toRightOf="@+id/chatView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>